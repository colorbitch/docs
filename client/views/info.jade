extends layout

block css
  link(rel='stylesheet', href='/css/account.css')

block content
  div.account-left
    div.account-info.clearfix
      if owner && owner.avatar_url
        img(src='#{owner.avatar_url}')
      else
        span.img-item.icon-user
      if owner
        p #{owner.login}
  div.account-right
    ul#all-docs.item-list
    
block script
  script(type='text/javascript',src='/js/info.js')