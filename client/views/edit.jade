extends layout

block css
  link(rel='stylesheet', href='/css/edit.css')

block content
  div.edit-left
    div.form-group
      input#title.form-control(type="text",placeholder="请输入文档名...",value='#{doc.title||""}')
    div.form-group.btn-toolbar
      div.btn-group
        if doc.auth == "private"
          button.auth-btn.active.btn.btn-default(type='button') 不公开
        else
          button.auth-btn.btn.btn-default(type='button') 不公开
        a(href='javascript:;').file-btn.btn.btn-default.hidden(data-tip='查看文档')
          span.glyphicon.glyphicon-file
        button.view-btn.btn.btn-default(data-tip='预览')
          span.glyphicon.glyphicon-eye-open
    div.editor
      div#editor
      button.btn.btn-primary.col-lg-12.save-btn 保存
      textarea#content.hidden #{doc.content||""}
  div#view.edit-right
    
block script
  script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js')
  script(type='text/javascript', src='/lib/showdown/showdown.js')
  script(type='text/javascript').
    var doc = {
      _id:'#{doc._id}',
      user:'#{user.login}',
      title:'#{doc.title}'
    };
  script(type='text/javascript', src='/js/edit.js')